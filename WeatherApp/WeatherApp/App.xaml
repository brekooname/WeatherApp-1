<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.App">
    <Application.Resources>
        <Style x:Key="DefaultGray" TargetType="Label">
            <Setter Property="TextColor" Value="#413C3C"/>
            <Setter Property="FontFamily" Value="Gadugi"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalOptions" Value="Start"/>
        </Style>
        <Style x:Key="DefaultGray15" TargetType="Label">
            <Setter Property="TextColor" Value="#413C3C"/>
            <Setter Property="FontFamily" Value="Gadugi"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style x:Key="DefaultGray16Bold" TargetType="Label">
            <Setter Property="TextColor" Value="#413C3C"/>
            <Setter Property="FontFamily" Value="Gadugi"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalOptions" Value="Start"/>
        </Style>
    </Application.Resources>
    
</Application>